@model IEnumerable<MvcApplicationTask.Models.MsgModels>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-xs-9">
                <table class="table table-hover">
                    <tr class="alert alert-info">
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Emiteur)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Contenu)
                                                                        </th>
                                                                        <th></th>
                                                                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Emiteur)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contenu)
                            </td>
                            @*<td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>*@
                        </tr>
                    }

            </table>
        </div>
        <div class="col-xs-3">
            <div class="btn btn-info">
                @Html.ActionLink("Create New Message", "Create")
            </div>
        </div>
    </div>
</div>