@model MvcApplicationTask.Models.Task

@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <h2>Edit Task</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

    <div class="container">

    @Html.HiddenFor(model => model.Id)
    <div class="row">
        <div class="col-xs-12">
            <div class="label label-default">
                Task
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.NomTask, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NomTask)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="label label-default">
                Description
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.Desc, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Desc)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="label label-default">
                Controller
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.contr, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.contr)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="label label-default">
                Start date
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.DateD, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DateD)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="label label-default">
                Finish date
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.DateF, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DateF)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="label label-default">
                State
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.Etat, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Etat)
            </div>
        </div>
    </div>

    <p>
        <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-ok-circle">  Save</span></button>
    </p>
</div>
    }

            <div>
                <div class="btn btn-default">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
